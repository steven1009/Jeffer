                            </li>
                            <li>
                                <a href="~/Producto/BuscarProductos"><i class="fa fa-search fa-fw" style="color:#f0ad4e"></i>Buscar Producto</a>
                            </li>

                            <li>
                                <a href="~/Producto/Index"><i class="fa fa-product-hunt fa-fw" style="color:#f0ad4e"></i>Artículos</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-sort-numeric-asc fa-fw" style="color:#f0ad4e"></i>Inventario</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-wrench fa-fw"></i> Ventas<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="~/Venta/VentaFactura"><i class="fa fa-archive fa-fw" style="color:#f0ad4e"></i>Generar Factura</a>
                            </li>
                            <li>
                                <a href="~/Venta/NuevaVenta"><i class="fa fa-shopping-cart fa-fw" style="color:#f0ad4e"></i>Nueva Venta</a>
                            </li>
                            <li>
                                <a href="~/DetalleVenta/Index"><i class="fa fa-info-circle fa-fw" style="color:#f0ad4e"></i>Detalle Ventas</a>
                            </li>
                            <li>
                                <a href="~/Venta/ReporteVentas"><i class="fa fa-book fa-fw" style="color:#f0ad4e"></i>Reportes</a>
                            </li>

                        </ul>
                    </li>
                    <li>
                        <a href="~/Cliente/Index"><i class="fa fa-user fa-fw"></i> Clientes</a>
                    </li>
                    <li>
                        <a href="~/Vendedor/Index"><i class="fa fa-user fa-fw"></i> Vendedores</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-wrench fa-fw"></i> Cobros y Pagos<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="~/ModoPago/Index"><i class="fa fa-dollar fa-fw" style="color:#f0ad4e"></i>Modos de Pago</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-dollar fa-fw" style="color:#f0ad4e"></i>Pagos</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-dollar fa-fw" style="color:#f0ad4e"></i>Cobros</a>
                            </li>

                        </ul>
                    </li>

                    <li>
                        <a href="#"><i class="fa fa-wrench fa-fw"></i> Administración<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="#">Empresa</a>
                            </li>
                            <li>
                                <a href="#">Empleados</a>
                            </li>
                            <li>
                                <a href="#">Almacenes</a>
                            </li>
                            <li>
                                <a href="#">Cargos</a>
                            </li>
                            <li>
                                <a href="#"> Usuarios</a>
                            </li>

                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>



        <div id="page-wrapper" class="navbar-right body2" >
            
                @RenderBody()
            
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
        </div>
    </div>
        <!-- /#wrapper -->
        <!-- jQuery -->
        <!-- Custom Theme JavaScript -->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

</body>
</html>



